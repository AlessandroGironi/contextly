modules = ["nodejs-20", "web"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Test Extension"

[[workflows.workflow]]
name = "Test Extension"
author = 43299209
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"YouTube AI Assistant Chrome Extension\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"==================================\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"To test this extension:\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"1. Open Chrome and go to chrome://extensions/\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"2. Enable 'Developer mode' (toggle in top right)\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"3. Click 'Load unpacked' and select this directory\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"4. Go to any YouTube video page\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"5. The AI assistant should appear as a card in the sidebar\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Files in this extension:\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ls -la *.js *.html *.css *.json"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Ready for testing!\""
