{
  "manifest_version": 3,
  "name": "YouTube AI Assistant",
  "version": "1.0",
  "description": "AI assistant for YouTube that answers questions about video content using OpenAI GPT-4",
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.google.com/*",
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["openai_client.js", "content.js", "transcript_fetcher.js"],
      "css": ["sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.js", "sidebar.css", "options.html", "options.js", "openai_client.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
